@model List<WelfareSurveySystem.Domain.Entities.Parent>
<h2>Manage PArent</h2>
<hr />


<div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>@TempData["Msg"]</strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<table class="table table-bordered">
    <tr>
        <td>Name</td>
        <td>IdCard</td>
        <td>BirthDay</td>
        <td>HealthStatues</td>
        <td>JobName</td>
        <td>MaritalStatus</td>
        <td>Delete</td>
        <td>Edit</td>
    </tr>

    @foreach (var item in Model)
    {
        if (ViewBag.EmployeeID == item.PersonId)
        {
            <tr>
                <form action="EditParents" method="post">
                    <input type="hidden" name="PersonId" value="@item.PersonId" />
                <td><input type="text" class="form-control" name="Name" value="@item.Name" /></td>
                <td><input type="text" class="form-control" name="IdCard" value="@item.IdCard" /></td>
                <td><input type="text" class="form-control" name="BirthDay" value="@item.BirthDay" /></td>
                <td><input type="text" class="form-control" name="HealthStatues" value="@item.HealthStatues" /></td>
                <td><input type="text" class="form-control" name="JobName" value="@item.JobName"/></td>
                <td><input type="text" class="form-control" name="MaritalStatus" value="@item.MaritalStatus" /></td>
                <td>
                    <input type="submit" class="form-control btn btn-success" name="btnSubmit" value="Save" />
                </td>
                <td>
                    <a asp-action="Index" asp-controller="EmployeesPersonalDetails" class="btn btn-warning">Cancel</a>
                </td>
                </form>
            </tr>
        }
        else
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.IdCard</td>
                <td>@item.BirthDay</td>
                <td>@item.HealthStatues</td>
                <td>@item.JobName</td>
                <td>@item.MaritalStatus</td>
                <td>
                    <a asp-action="ConfirmDelete"
               asp-route-id="@item.PersonId"
                       class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>

                </td>
                <td>
                    <a asp-action="EditParents" asp-route-id="@item.PersonId" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }



    }
</table>