@model IEnumerable<WelfareSurveySystem.Domain.Entities.RealEstate>

@{
    ViewData["Title"] = "AddRealEstate";
}

<h1>Add Real Estate</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@if (Model.Count() >= 1)
{

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RealEstateId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RealEstateTypeId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OwnOrRent)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RealEstateNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RealEstateDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeID)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RealEstateId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RealEstateTypeId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OwnOrRent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RealEstateNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RealEstateDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeID)
                    </td>
                    @*<td>*@
                       @* @Html.ActionLink("Edit", "RealEstateEdit", new {  id=item.RealEstateId  }) |*@
                        @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                       @* <a asp-action="RealEstateDelete" asp-route-id="@item.RealEstateId" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>*@
                   @* </td>*@
                    <td>
                        <a asp-action="RealEstateDelete"
                   asp-route-id="@item.RealEstateId"
                           class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>

                    </td>
                    <td>
                        <a asp-action="RealEstateEdit" asp-route-id="@item.RealEstateId" class="btn btn-primary">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRealEstate">
            <input type="hidden" name="EmployeeID" value="@ViewBag.EmployeeID">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Real Estate Type</label>
                <select name="RealEstateTypeId" asp-items="ViewBag.RealEstateTypes" class="form-select">
                    <option value="">Select Real Estate Type</option>
                </select>
                @*<span asp-validation-for="MaritalStatus" class="text-danger"></span>*@
            </div>



            <div class="form-group">
                @*<label class="control-label">Own </label>*@
                <div class="row">
                    <div class="col">
                        Own <input type="radio" name="OwnOrRent" class="form-check" value="Own" />
                    </div>
                    <div class="col">
                        @*<label class="control-label">Rented </label>*@
                        Rented <input type="radio" name="OwnOrRent" class="form-check" value="Rented" />
                    </div>
                    @*<span asp-validation-for="Name" class="text-danger"></span>*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label">Real Estate Number</label>
                <input name="RealEstateNumber" class="form-control" />
                @*<span asp-validation-for="BirthDay" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label class="control-label">Real Estate Description</label>
                <textarea name="RealEstateDescription" class="form-control"></textarea>
                @*<span asp-validation-for="HealthStatues" class="text-danger"></span>*@
            </div>
           

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>




