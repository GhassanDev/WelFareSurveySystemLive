@model IEnumerable<WelfareSurveySystem.Domain.Entities.Employee>

@{
    ViewData["Title"] = "List";
}

<link rel="stylesheet"
      type="text/css"
      href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/css/jquery.dataTables.css" />

<h1>Employee List</h1>

<p>
    <a asp-action="CreatePersonalDetails" class="btn btn-primary">Create New Employee</a>
</p>
<div class="container-fluid">
    <table class="table table-bordered table-striped bg-info" id="table_id">
        <thead class="bg-info">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdCard)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ServiceNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ForceName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Retired)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Branch)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ShekhName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourtName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmailID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsDeceased)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdCard)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ForceName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Retired)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Branch)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShekhName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourtName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDeceased)
                    </td>
                    @*<td>
                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>*@
                </tr>
            }
        </tbody>
    </table>
</div>




@section Scripts
{

    @*<script type="text/javascript"
            charset="utf8"
            src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>*@
    <script type="text/javascript"
            charset="utf8"
            src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"></script>
    <script>
        // jQuery code to initialize the DataTable
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
    </script>
}
